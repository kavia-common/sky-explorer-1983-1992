# Frontend environment variables (do not commit real values to VCS).
# Copy this file to .env and adjust values as needed.

# Runtime environment (mirrors process.env.NODE_ENV if not set)
REACT_APP_NODE_ENV=development

# Base URLs
REACT_APP_API_BASE=http://localhost:3000/api
REACT_APP_BACKEND_URL=http://localhost:3001
REACT_APP_FRONTEND_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3001

# Build/Runtime toggles
REACT_APP_NEXT_TELEMETRY_DISABLED=true
REACT_APP_ENABLE_SOURCE_MAPS=true
REACT_APP_PORT=3000
REACT_APP_TRUST_PROXY=false
REACT_APP_LOG_LEVEL=info

# Feature flags (comma-separated). Example: "disable_webgl,show_debug"
REACT_APP_FEATURE_FLAGS=
REACT_APP_EXPERIMENTS_ENABLED=false
